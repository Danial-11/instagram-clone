<div class="d-flex flex-column align-items-center mt-3">
    <div class = "col-xl-7 col-lq-8 col-md-10 col-sm-11 post-card">
        <div class="card">
            <div class="card-header">
                <% posts.each do |post| %>
                <div class="card mt-3 post">
                    <div class = "card-header">
                        <%= link_to users_path(post.user), title: post.user.username do %>
                        <h4><%= post.user.username %></h4>
                          <%= button_to post_path(post), method: :delete, class: "ml-auto delete-post-icon mx-0 my-auto pull-right" do %>
                            <i class = "far fa-trash-alt" aria-hidden = "true"></i>
                            <% end %>
                          <%= link_to edit_post_path(post) do %>
                             <i class = "fas fa-edit" aria-hidden = "true"></i>
                          <% end %>
                        <hr>
                        <% end %>
                     <% if post.photos.size == 1 %>
                      <%= image_tag post.photos.first.image.url(:standard), class: "card-img-top" %>
                    <% else %>
                      <div class="carousel slide" data-ride="carousel" id="carousel-post-<%= @post.id %>">
                        <div class="carousel-inner">
                          <% post.photos.each do |photo| %>
                            <% if photo == post.photos.first %>
                              <div class="carousel-item active">
                            <% else %>
                              <div class="carousel-item">
                            <% end %>
                                <%= image_tag photo.image.url(:standard), class: "card-img-top" %>
                              </div>
                          <% end %>
                        </div>
                        <a class="carousel-control-prev" href="#carousel-post-<%= @post.id %>" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-post-<%= @post.id %>" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>
                    <% end %>
                      </div>
                    <div class="card-body">
                        <div class="actions" id="like-button-<%= post.id.to_s %>">
                            <% @like = current_user.likes.find_by(post_id: post.id) %>
                            <% if @like.present? %>
                              <%= link_to image_tag("like_on.png", height: "30px"), like_path(id: @like.id), method: :delete, remote: true, class: "btn", style: "margin-left: -5px" %>
                            <% else %>
                              <%= link_to image_tag("like.png", height: "30px"), post_likes_path(post_id: post.id), method: :post, remote: true, class: " btn", style: "margin-left: -5px" %>
                          <% end %>
                    </div>
                        <div class="mx-3">
                            <span><strong><%= post.user.username %></strong></span>
                            <span><%= post.content %></span>
                        </div>
                        <div class="light-color post-time mx-3 my-2"><%= time_ago_in_words(post.created_at) %> ago</div>
                        <div id="comment-form-post-<%= post.id.to_s %>">
                          <%= render 'shared/comment_list', {post: post} %>
                        </div>
                        <div class="row actions mx-1" id="comment-form-post-<%= post.id.to_s %>">
                            <%= form_for [post, Comment.new], :html => {:class => "w-100"}, remote: true do |f| %>
                                <%= f.hidden_field :user_id, value: current_user.id %>
                                <%= f.hidden_field :post_id, value: post.id %>
                                <%= f.text_field :content, class: "form-control comment-input border-1", placeholder: "Add a comment ...", autocomplete: :off %>
                                <% end %>
                        </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>

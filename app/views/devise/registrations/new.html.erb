<div class= "container">
  <div class= "row">
    <div class="col-lg-6 landing-left">
    <%= image_tag 'dummy-phone.png', size: "500x720", class: "dummy-phone" %>
    </div>
    <div class="col-lg-6">
        <div class="border border-dark landing-right">
          <div class = "text-center">
          <%= image_tag 'instagram', size: "200x100", class: "text-center" %>
          </div>
          <p style= "color: Gray"> <strong> Sign up to see photos and videos from your friends. </strong></p>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"registeration-fields", placeholder: "Email", required: true %>
            </div>
            <br>
            <div class="field">
              <%= f.text_field :username, autofocus: true, autocomplete: "Username", class: "registeration-fields" ,placeholder: "Username", required: true %>
            </div>
            <br>
            <div class="field">
              <%= f.password_field :password, autocomplete: "new-password", class:"registeration-fields", placeholder: "Password" %>
            </div>
            <br>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"registeration-fields", placeholder: "Confirm Password" %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
            </div>
            <p style= "color: Gray">
              By signing up, you agree to our<strong> Terms, Data Policy and Cookies Policy.</strong>
            </p>
          <% end %>
        </div>

        <div class="border border-dark mt-3 landing-right text-center">
          <p>Have an account? <%= render "devise/shared/links" %></p>
        </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="sign-in-container border border-dark">
  <div class="text-center">
    <%= image_tag 'instagram', size: "200x100" %>
  </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "registeration-fields" ,placeholder: "Email" %>
      </div>
      <br>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "registeration-fields" ,placeholder: "Password"%>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
      <br>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

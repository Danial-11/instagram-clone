<% stories.each do |story| %>
  <div class="card w-50 mb-5">
    <div class="card-header text-center">
      <h4><%= story.user.username %></h4>
    </div>
    <br>
    <p class= "mx-2" ><%= story.caption %>
      <% if story.user == current_user %>
        <%= link_to story_path(story), method: :delete, class: "ml-auto mx-0 my-auto pull-right" do %>
          <i class = "far fa-trash-alt pull-right mx-2" aria-hidden = "true"></i>
        <% end %>
        <%= link_to story_path(story) do %>
          <i class = "far fa-circle pull-right" aria-hidden = "true"></i>
        <% end %>
      </p>
    <% end %>
    <% story.photos.each do |photo| %>
      <div class="text-center mb-3">
        <%= image_tag photo.image.url, class: "rounded-circle", width: "30%"%>
      </div>
    <% end %>
    <div class="light-color mx-3 my-2">created <%= time_ago_in_words(story.created_at) %> ago</div>
  </div>
<% end %>

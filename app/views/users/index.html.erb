<div class="row">
  <div class="col-4 text-center mb-3">
    <%= render 'gravatar' %>
  </div>
  <div class="col-8">
    <div class="row mt-5">
      <h1 class="username col-5 mt-2"><%= current_user.username %></h1>
      <button class="btn btn-success col-2 mx-1 m-auto"><%= link_to 'Edit User', edit_user_registration_path(current_user), class: "text-white" %></button>
      <%= link_to "Logout User", destroy_user_session_path, class: "btn btn-success col-1 m-auto mx-2" %>
    </div>
    <div class="row mt-3">
      <h3><%= current_user.email %></h3>
    </div>
    <div class="mt-3">
      <h5><%= current_user.bio %></h5>
    </div>
    <%= link_to 'Create Post', posts_path, class: "btn btn-success" %>
    <%= link_to 'Add to story', stories_path, class: "btn btn-success" %>
    <%= link_to 'Followers', followers_path, class: "btn btn-success" %>
  </div>
  <hr>
</div>
<div>
  <% @user_posts.each do |post| %>
    <div class = "card">
      <div class = "card-header">
        <h4><%= post.user.username %></h4>
      </div>
      <p class= "mx-2" ><%= post.content %></p>
      <%= link_to  posts_path do %>
        <div class="text-center mb-3">
          <%= image_tag post.photos.first.image.url, class: "rounded-circle", width: "30%", height: "300px" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</div>
<%= render 'shared/footer' if current_user %>
